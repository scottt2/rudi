<h1>Show Post</h1>

<ul>

  <li>
    <strong>Display name:</strong>
    <%= @post.display_name %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @post.body %>
  </li>

  <li>
    <strong>Published at:</strong>
    <%= @post.published_at %>
  </li>

  <li>
    <strong>Tags:</strong>
    <%= @post.tags %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.post_path(@conn, :edit, @post) %></span>
<span><%= link "Back", to: Routes.post_path(@conn, :index) %></span>
